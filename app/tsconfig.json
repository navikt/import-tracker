{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext", "ES2021.String"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "noImplicitAny": false,
    "incremental": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["components/*"],
      "@/crawler/*": ["crawler/*"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "lib": ["ES2021.String"]
    }
  },
  "include": [
    "next-env.d.ts",
    "pages/**/*.(ts|tsx)",
    "components/**/*.(ts|tsx)",
    "crawler/__tests__/**/*.(ts|tsx)",
    "crawler/git/**/*.(ts|tsx)",
    "crawler/parsing/**/*.(ts|tsx)",
    "crawler/index.ts",
    "crawler/metadata.ts",
    "crawler/run.ts"
  ],
  "exclude": [
    "node_modules",
    "files",
    "files copy",
    "files copy/**",
    "files/**",
    "files*/**",
    "files*"
  ]
}
